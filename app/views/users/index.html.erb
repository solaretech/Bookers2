<div class="col-xs-9">
  <%= render '/books/sidebar', {user: @user, new_book: @new_book} %>

  <h2>Users</h2>
  <table class="table table-striped">
    <tr>
      <th>image</th>
      <th colspan="2">name</th>
    </tr>

    <% @users.each do |user| %>

    <tr>
      <td><%= attachment_image_tag user, :image, :fill, 50, 50  %></td>
      <td><%= user.name %></td>
      <td><%= link_to 'Show', user_path(user), class: "user_#{user.id}"  %></td>
    </tr>

    <% end %>
  </table>
</div>