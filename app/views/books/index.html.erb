<%= render '/books/errors', model: @new_book %>

<%= render '/books/sidebar', {user: @user, new_book: @new_book} %>

<div class="col-xs-8">
  <h2>Books</h2>
  <table class="table table-striped">
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>

    <% @books.each do |book| %>

    <tr>
      <td><%= attachment_image_tag book.user, :image, :fill, 50, 50 %></td>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>
    </tr>

    <% end %>
  </table>
</div>