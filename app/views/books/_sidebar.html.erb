<div class="col-xs-4">
  <h2>User info</h2>
  <%= attachment_image_tag user, :image, :fill, 100, 100 %>
  <table class="table table-striped">
    <tr>
      <th>name</th>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <th>introduction</th>
      <td><%= user.introduction %></td>
    </tr>
  </table>
  <%= link_to(edit_user_path(current_user)) do %>
    <div class="btn">
      <i class="fas fa-cog"></i>
    </div>
  <% end %>
  <h2>New Book</h2>
  <%= form_for(new_book) do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Opinion</p>
    <%= f.text_area :body %>
    <%= f.submit 'Create book' %>
  <% end %>
</div>