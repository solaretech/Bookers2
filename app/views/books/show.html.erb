<%= render '/books/sidebar', {user: @user, new_book: @new_book} %>

<div class="col-xs-8">
  <h2>Book detail</h2>
  <table class="table table-striped">
    <tr>
      <td>
        <%= attachment_image_tag @book.user, :image, :fill, 50, 50 %><br>
        <%= @book.user.name %>
      </td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <td>
        <% if current_user == @book.user %>
          <%= link_to 'Edit', edit_book_path(@book) %>
          <%= link_to 'Delete', book_path(@book), method: :delete, data:{confirm: 'Are you sure?'} %>
        <% end %>
      </td>
    </tr>
  </table>
</div>